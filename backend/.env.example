# =============================================================================
# Environment Variables Template
# Copy this file to .env.development, .env.staging, or .env.production
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
PORT=8000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_bot_dev
DB_USER=postgres
DB_PASSWORD=your_db_password_here

# Redis Configuration  
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security Configuration
JWT_SECRET=your_super_secret_jwt_key_minimum_32_chars
ENCRYPTION_KEY=your_encryption_key_for_api_keys
TRADINGVIEW_WEBHOOK_SECRET=your_tradingview_webhook_secret
SECURITY_PASSWORD=your_master_encryption_password

# Trading Configuration
DEMO_MODE=true
MAX_POSITION_SIZE=1000.0
DEFAULT_LEVERAGE=1
RISK_LIMIT_PCT=2.0

# Exchange API Keys (Encrypted in production)
BINGX_API_KEY=your_bingx_api_key
BINGX_SECRET_KEY=your_bingx_secret_key

# TradingView Configuration
SKIP_UA_CHECK=true
REQUIRE_AUTH=false

# Rate Limiting
WEBHOOK_RATE_LIMIT=60
API_RATE_LIMIT=1000

# Monitoring & Logging
LOG_LEVEL=INFO
ENABLE_HEALTH_MONITORING=true

# CORS Configuration
FRONTEND_URL=http://localhost:3000
DASHBOARD_URL=http://localhost:3001

# Optional: IP Whitelist (comma-separated)
# IP_WHITELIST=192.168.1.100,10.0.0.50