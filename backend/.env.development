# =============================================================================
# Development Environment Variables
# 개발용 - 보안이 느슨하고 디버깅 활성화
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
PORT=8000
LOG_LEVEL=DEBUG

# Database Configuration (Local PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_bot_dev
DB_USER=postgres
DB_PASSWORD=dev_password

# Redis Configuration (Local Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security Configuration (개발용 - 약한 키)
JWT_SECRET=dev-jwt-secret-change-in-production-minimum-32-characters
ENCRYPTION_KEY=dev-encryption-key-change-me
TRADINGVIEW_WEBHOOK_SECRET=dev_webhook_secret_123
SECURITY_PASSWORD=dev-master-password-change-me

# Trading Configuration (안전한 데모 모드)
DEMO_MODE=true
MAX_POSITION_SIZE=200.0
DEFAULT_LEVERAGE=1
RISK_LIMIT_PCT=2.0

# Exchange API Keys (데모 키 사용)
BINGX_API_KEY=demo_api_key
BINGX_SECRET_KEY=demo_secret_key

# TradingView Configuration (개발용 - 관대한 설정)
SKIP_UA_CHECK=true
REQUIRE_AUTH=false

# Rate Limiting (관대한 제한)
WEBHOOK_RATE_LIMIT=100
API_RATE_LIMIT=2000

# CORS Configuration (모든 로컬 개발 포트 허용)
FRONTEND_URL=http://localhost:3000
DASHBOARD_URL=http://localhost:3001

# Development Features
ENABLE_HEALTH_MONITORING=true
ENABLE_DEBUG_ENDPOINTS=true