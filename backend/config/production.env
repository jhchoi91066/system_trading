# Production Environment Configuration
# ðŸš€ Phase 16: Final Production Deployment

# Environment
ENVIRONMENT=production
NODE_ENV=production
DEBUG=false
LOG_LEVEL=info

# Security Configuration
SECRET_KEY=your-256-bit-secret-key-here
JWT_SECRET=your-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here
API_RATE_LIMIT=1000
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Database Configuration (Production)
DATABASE_URL=postgresql://user:password@localhost:5432/trading_bot_prod
REDIS_URL=redis://localhost:6379/0
DATABASE_MAX_CONNECTIONS=20
DATABASE_POOL_TIMEOUT=30

# Trading Configuration
BINANCE_API_KEY=your-production-binance-api-key
BINANCE_SECRET_KEY=your-production-binance-secret-key
TRADING_MODE=live
MAX_POSITION_SIZE=0.02
DAILY_LOSS_LIMIT=0.05
RISK_MANAGEMENT_ENABLED=true

# Monitoring & Alerting
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001
ALERT_EMAIL=admin@yourdomain.com
SLACK_WEBHOOK=your-slack-webhook-url
DISCORD_WEBHOOK=your-discord-webhook-url

# Performance & Scaling
WORKER_PROCESSES=4
MAX_REQUESTS_PER_WORKER=1000
MEMORY_LIMIT=2GB
CPU_LIMIT=80

# Backup & Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=s3://your-backup-bucket

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.key

# External Services
WEBHOOK_URL=https://api.yourdomain.com/webhook
NOTIFICATION_SERVICE_URL=https://notifications.yourdomain.com
ANALYTICS_SERVICE_URL=https://analytics.yourdomain.com